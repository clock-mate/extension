{
  "name": "clockmate",
  "version": "4.0.0",
  "description": "Browser Erweiterung für Chromium und Firefox, welche die Überstunden bzw. ein Gleitzeitkonto direkt in der Fiori-Zeiterfassung anzeigt.",
  "browser": "src/extension/contentscript/contentscript",
  "type": "module",
  "scripts": {
    "check-format": "prettier --check . && eslint && tsc -noEmit",
    "format": "prettier --write .",
    "build": "npm run transpileBuildScripts && node scripts/build-prepare-folders-and-files.js && npm run bundleExtension && node scripts/build-fix-manifests.js && npm run zipExtensions",
    "transpileBuildScripts": "tsc --project tsconfig.build.json",
    "bundleExtension": "npm run bundleExtension:webWorker && npm run bundleExtension:popup && npm run bundleExtension:offscreen && npm run bundleExtension:settings && esbuild src/extension/contentscript/contentscript.ts --bundle --outfile=build/extension/contentscript/clockmate.js && esbuild src/extension/backgroundscript/backgroundscript.ts --bundle --outfile=build/extension/backgroundscript/backgroundscript.js",
    "bundleExtension:contentBackgroundscript-dev": "esbuild src/extension/contentscript/contentscript.ts --bundle --sourcemap --outfile=build/extension/contentscript/clockmate.js && esbuild src/extension/backgroundscript/backgroundscript.ts --bundle --sourcemap --outfile=build/extension/backgroundscript/backgroundscript.js",
    "bundleExtension:webWorker": "esbuild src/extension/backgroundscript/workers/webWorkers/timeStatementWorker.ts --bundle --minify --outfile=build/extension/backgroundscript/webWorker/timeStatementWorker.js && esbuild src/extension/backgroundscript/workers/webWorkers/timeSheetWorker.ts --bundle --outfile=build/extension/backgroundscript/webWorker/timeSheetWorker.js && esbuild src/extension/backgroundscript/workers/webWorkers/employeeIdWorker.ts --bundle --outfile=build/extension/backgroundscript/webWorker/employeeIdWorker.js",
    "bundleExtension:popup": "esbuild src/extension/popup/popupscript.ts --bundle --outfile=build/extension/popup/popupscript.js && npm run bundleExtension:popup:sass",
    "bundleExtension:popup:sass": "sass --no-source-map --style=compressed src/extension/popup/clockmate.scss:build/extension/popup/clockmate.css",
    "bundleExtension:offscreen": "esbuild src/extension/backgroundscript/workers/chromium/offScreenDocument/offscreen.ts --bundle --outfile=build/extension-chromium/backgroundscript/chromium/offscreen.js",
    "bundleExtension:settings": "ejs src/extension/settings/index.ejs -o build/extension/settings/settings.html && npx @tailwindcss/cli --input src/extension/settings/settings.css --output build/extension/settings/settings.css --minify",
    "zipExtensions": "node scripts/build-zip-extensions.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/clock-mate/extension.git"
  },
  "author": "NilsPvR",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/clock-mate/extension/issues"
  },
  "homepage": "https://github.com/clock-mate/extension#readme",
  "devDependencies": {
    "@eslint/js": "^9.18.0",
    "@tailwindcss/cli": "^4.0.0-beta.9",
    "@types/adm-zip": "^0.5.7",
    "@types/fs-extra": "^11.0.4",
    "@types/webextension-polyfill": "^0.12.1",
    "adm-zip": "^0.5.16",
    "ejs": "^3.1.10",
    "esbuild": "^0.24.2",
    "eslint": "^9.18.0",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-no-unsanitized": "^4.1.2",
    "fs-extra": "^11.3.0",
    "globals": "^15.14.0",
    "prettier": "3.4.2",
    "sass": "^1.83.4",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.20.0"
  },
  "dependencies": {
    "pdfjs-dist": "^4.10.38",
    "tailwindcss": "^4.0.0-beta.9",
    "webextension-polyfill": "^0.12.0"
  }
}
