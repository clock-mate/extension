<h2 class="my-4 p-2 text-2xl">Berechnung</h2>
<div class="ms-5">
    <!-- prettier-ignore -->
    <%- include('../elements/checkbox-wrapper', { id: 'round-5-min', label: 'Auf 5 min runden',
        description: 'Das Gleitzeitkonto wird auf 5 min gerundet angezeigt',
        checked: false }) %>
    <div class="m-2"></div>
    <!-- prettier-ignore -->
    <%- include('../elements/checkbox-wrapper', { id: 'half-public-holidays', label: 'Halbe Feiertage berücksichtigen',
        description: 'Bei der Berechnung werden die ausgewählten Tage als halbe Feitertage gerechnet. Bei 8 Std. pro Tag somit 4 Std. Feiertag.',
        checked: true }) %>
    <div class="ms-5 mt-2">
        <%- include('../elements/checkbox-wrapper', { id: 'half-public-holiday-24-dec', label:
        '24.12', description: '', checked: true}) %>
        <div class="m-1"></div>
        <%- include('../elements/checkbox-wrapper', { id: 'half-public-holiday-31-dec', label:
        '31.12', description: '', checked: true}) %>
    </div>
    <form>
        <label
            for="monthsback"
            class="dark:bg-clockmate-grey absolute -top-2 left-2 inline-block rounded-lg bg-white px-1 text-sm font-medium"
            >Monate</label
        >
        <input
            type="number"
            name="monthsback"
            id="monthsback"
            aria-label="Monate zurück"
            placeholder="3"
            min="1"
            max="12"
            class="focus:outline-clockmate-blue block w-0.5 rounded-md px-3 py-2 text-sm outline-1 -outline-offset-1 outline-gray-300 placeholder:text-gray-500 focus:outline-2 focus:-outline-offset-2 sm:text-sm/6 md:w-1/2"
        />
        <button type="submit">
    </form>
    <div class="relative mt-3 mb-5">
        
    </div>
</div>
