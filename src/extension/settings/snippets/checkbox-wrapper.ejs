<div class="flex gap-3">
    <div class="flex h-6 shrink-0 items-center">
        <div class="group grid size-4 grid-cols-1">
            <%- include('checkbox-input', { id: id, checked: checked}) %>
            <svg
                class="pointer-events-none col-start-1 row-start-1 size-3.5 self-center justify-self-center stroke-white group-has-disabled:stroke-gray-950/35"
                viewBox="0 0 14 14"
                fill="none"
            >
                <path
                    class="opacity-0 group-has-checked:opacity-100"
                    d="M3 8L6 11L11 3.5"
                    stroke-width="2"
                    stroke-linecap="round"
                    stroke-linejoin="round"
                />
                <path
                    class="opacity-0 group-has-indeterminate:opacity-100"
                    d="M3 7H11"
                    stroke-width="2"
                    stroke-linecap="round"
                    stroke-linejoin="round"
                />
            </svg>
        </div>
    </div>
    <div class="text-sm/6">
        <label for="<%= id %>" class="font-medium"><%= label %></label>
        <% if (description) { %>
        <p id="<%= id %>-description" class="text-gray-700 dark:text-gray-400">
            <%= description %>
        </p>
        <% } %>
    </div>
</div>
